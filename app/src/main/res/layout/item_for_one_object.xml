<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       >


        <TextView
            android:id="@+id/textView_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView_gk"
            android:layout_alignStart="@+id/textView_gk"
            android:layout_below="@+id/textView_gk"
            android:focusable="true"
            android:paddingBottom="0dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:scaleType="centerInside"
            android:text="1-к квартира, "
            android:textColor="#338"
            android:textSize="16dp"
            android:textStyle="italic"
            />

        <TextView
            android:id="@+id/textView_gk"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/view2"
            android:layout_marginTop="11dp"
            android:paddingBottom="0dp"
            android:paddingLeft="8dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:text="Местонахождение: там-то, там-то..."
            android:textColor="#111"
            android:textSize="18dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="70dp" />

        <TextView
            android:id="@+id/sdacha_gk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#111"
            android:layout_alignLeft="@+id/addr_inObj"
            android:layout_alignStart="@+id/addr_inObj"
            android:layout_below="@+id/addr_inObj"
            android:paddingLeft="8dp"
            android:paddingTop="4dp"
            android:text="TextView"
            android:textSize="14dp" />

        <TextView
            android:paddingLeft="8dp"
            android:id="@+id/addr_inObj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView_price"
            android:layout_alignStart="@+id/textView_price"
            android:layout_below="@+id/textView_price"
            android:text="TextView"
            android:textColor="#111"/>

        <TextView
            android:id="@+id/bigText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/sdacha_gk"
            android:padding="8dp"
            android:text="TextView"
            android:textColor="#111"/>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>